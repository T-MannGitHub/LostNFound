<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemFound"
            android:layout_width="314dp"
            android:layout_height="53dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="44dp"
            android:text="TextViewItemFound"
            app:layout_constraintBottom_toTopOf="@+id/textViewDateReported"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDateReported"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="44dp"
            android:text="TextViewDateReported"
            app:layout_constraintBottom_toTopOf="@+id/textViewLocationReported"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemFound" />

        <TextView
            android:id="@+id/textViewLocationReported"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="100dp"
            android:text="TextViewLocationReported"
            app:layout_constraintBottom_toTopOf="@+id/buttonDeleteItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateReported" />
    </LinearLayout>

</FrameLayout>