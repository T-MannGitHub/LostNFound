<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delete_item">

    <TextView
        android:id="@+id/textViewItemFound"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="44dp"
        android:text="TextViewItemFound"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDateReported"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDateReported"
        android:layout_width="314dp"
        android:layout_height="60dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="44dp"
        android:text="TextViewDateReported"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewLocationReported"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemFound" />

    <TextView
        android:id="@+id/textViewLocationReported"
        android:layout_width="314dp"
        android:layout_height="60dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="100dp"
        android:text="TextViewLocationReported"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDeleteItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateReported" />

    <Button
        android:id="@+id/buttonDeleteItem"
        android:layout_width="274dp"
        android:layout_height="95dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:text="@string/delete"
        android:textSize="20sp"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewToMain"
        android:layout_width="227dp"
        android:layout_height="28dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="38dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Back to main menu"
        android:textColor="#0F8503"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteItem"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>